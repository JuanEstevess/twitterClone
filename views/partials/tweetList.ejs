<% for(let tweet of allTweets){ %>
<div class="tweet" style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px">
  <div class="tweet-header" style="display: flex; align-items: center; margin-bottom: 5px">
    <img
      src="https://twirpz.files.wordpress.com/2015/06/twitter-avi-gender-balanced-figure.png?w=640"
      alt="Avatar del usuario"
      class="tweet-avatar"
      style="width: 40px; height: 40px; border-radius: 50%; margin-right: 10px"
    />
    <div class="tweet-fullname" style="font-weight: bold">
      <%= tweet.user.firstname %><%= tweet.user.lastname %>
    </div>
    <div class="tweet-username" style="color: #888"><%= tweet.user.username%></div>
    <div>&bull;</div>
    <div class="tweet-date"><%= tweet.date %></div>
  </div>
  <div class="tweet-content" style="margin-bottom: 10px"><%= tweet.content %></div>
  <div
    class="tweet-footer"
    style="display: flex; justify-content: space-between; color: #888; font-size: 12px"
  >
    <div class="tweet-actions">
      <span><%- include ("../../public/img/icons/like.svg") %></span>
      <span>Count</span>
    </div>
  </div>
</div>
<%}%>
