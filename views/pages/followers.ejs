<!DOCTYPE html>
<html>
  <head>
    <%- include("../partials/meta") %>
  </head>

  <body>
    <section class="container">
      <div class="row">
        <div class="col-md-1 col-lg-2">
          <%- include("../partials/sidebar") %>
          <!-- Contenido de la primera columna -->
        </div>

        <div class="col-md-11 col-lg-6">
          <div class="border pt-4 px-4">
            <div>
              <h1><%- user.firstname %> <%- user.lastname %></h1>
            </div>
            <div>
              <p>@<%- user.username %></p>
            </div>
            <div class="d-flex justify-content-around">
              <div
                class="border-bottom border-4"
                style="border-color: var(--color-principal) !important"
              >
                <h2 class="mb-2 fs-5">Followers</h2>
              </div>

              <div>
                <div>
                  <h2 class="mb-2 fs-5">Following</h2>
                </div>
              </div>
            </div>
          </div>
          <div class="border border-top-0 p-3"><%- include("../partials/userFollower") %></div>
        </div>
        <div class="d-none d-lg-block col-md-4 col-lg-4">
          <!-- Contenido de la tercera columna -->
          <%- include("../partials/staticSidebar") %>
        </div>
      </div>
    </section>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
